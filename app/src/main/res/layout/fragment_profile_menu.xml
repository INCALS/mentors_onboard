<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.taeven.anew.fragment.profile_menu"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:background="#c52831">

        <android.support.v7.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="50dp"
            android:layout_centerHorizontal="true"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:layout_height="100dp"
                android:layout_width="match_parent"
                android:id="@+id/profile_pic"
                android:src="@drawable/profile_unselected"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerInside">
            </ImageView>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Welcome"
                android:id="@+id/textView10"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:singleLine="false"
                android:gravity="bottom"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Name"
                android:id="@+id/name_prof_menu"
                android:textColor="#ffffff"
                android:layout_weight="1"
                android:textAlignment="gravity"
                android:singleLine="false"
                android:gravity="top"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Edit profile"
            android:id="@+id/edit_profile"
            android:paddingLeft="20dp"
            android:textColor="#3d3c49"
            android:gravity="fill_vertical"
            android:background="@drawable/text_view_selector" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Submit profile for evaluation"
            android:id="@+id/submit_profile"
            android:paddingLeft="20dp"
            android:textColor="#3d3c49"
            android:gravity="fill_vertical"
            android:background="@drawable/text_view_selector" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Contact us"
            android:id="@+id/contact_us"
            android:paddingLeft="20dp"
            android:textColor="#3d3c49"
            android:gravity="fill_vertical"
            android:background="@drawable/text_view_selector" />
    </LinearLayout>

</LinearLayout>
        </ScrollView>

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/progress_img"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:visibility="invisible"
        android:indeterminate="false" />


</FrameLayout>